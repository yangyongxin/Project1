<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_wihte"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_green"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RadioButton
            android:id="@+id/rb_recommend"
            style="@style/tittle_style"
            android:checked="true"
            android:text="@string/recommend" />

        <RadioButton
            android:id="@+id/rb_distance"
            style="@style/tittle_style"
            android:text="@string/distance" />

        <RadioButton
            android:id="@+id/rb_price"
            style="@style/tittle_style"
            android:text="@string/price_asc" />

        <RadioButton
            android:id="@+id/rb_score"
            style="@style/tittle_style"
            android:text="@string/score" />

        <RadioButton
            android:id="@+id/rb_filter"
            style="@style/tittle_style"
            android:text="@string/filter" />
    </RadioGroup>

    <com.greentree.view.RefreshListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/color_wihte"
        android:dividerHeight="5dp" />

</LinearLayout>
